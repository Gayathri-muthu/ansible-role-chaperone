          optional: 0
        - id: vcenter_password
          name: "vCenter admin PASSWORD"
          optional: 0
          input: password
        - id: vcenter_port
          name: "vCenter Port"
          optional: 0
          help: "Port for authentication connection to vCenter"
          default: 443
        - id: ntp_svr
          name: "NTP server"
          optional: 0
          help: "NTP server for your network"
        - id: hostprofile_name
          name: "Host Profile name"
          optional: 0
          help: "Name the host profile"
