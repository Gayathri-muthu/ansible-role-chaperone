      - "Port Group Names":
        - id: api_grp
          name: "VIO API Network"
          optional: 0
          help: "VIO API Network"
        - id: api_vlan
          name: "VIO API VLAN"
          optional: 1
        - id: ext_grp
          name: "VIO External Network"
          optional: 0
          help: "VIO External Network"
        - id: ext_vlan
          name: "VIO External Network"
          optional: 1
        - id: mgmt_grp
          name: "VIO Management"
          optional: 0
          help: "VIO Management"
        - id: mgmt_vlan
          name: "VIO Management VLAN"
          optional: 1
        - id: store_grp
          name: "VIO Storage"
          optional: 0
          help: "VIO Storage"
        - id: store_vlan
          name: "VIO Storage VLAN"
          optional: 1
        - id: vmotion_grp
          name: "VIO vMotion"
          optional: 0
          help: "VIO vMotion"
        - id: vmotion_vlan
          name: "VIO vMotion VLAN"
          optional: 1
        - id: vsan_grp
          name: "VIO VSAN"
          optional: 0
          help: "VIO VSAN"
        - id: vsan_vlan
          name: "VIO VSAN VLAN"
          optional: 1
  - "vCenter Server":
    - "General Configuration":
      - "Architectural Scheme":
        - id: appliance_deployment_scheme
          name: "Appliance deployment scheme"
          optional: 0
          input: dropdown
          options:
            - id: combined
            - id: psc
            - id: vcsa
          help: "Determines whether to deploy a combined vCSA and PSC or dedicated appliance(s)"
      - "Out-of-band Management vCenter Server":
