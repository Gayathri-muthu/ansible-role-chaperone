          name: "PowerShell Remoting"
          input: checkbox
          help: "Is Enable-PSRemoting?"
        - id: set_exec
          name: "PowerShell Execution Policy"
          input: checkbox
          help: "Is Set-ExecutionPolicy Unrestricted?"
