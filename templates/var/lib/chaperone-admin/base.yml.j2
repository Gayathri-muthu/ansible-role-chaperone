# ---------->>>>>>>>> READ ME <<<<<<<<<<----------------
# All of the property ids should be added to the playbooks/supervio-ui/ui,yml
# playbook
---
- Prepare:
  - "Chaperone Configuration":
    - "Global Constants":
      - "Infrastructure Services":
        - id: ntp_server
          name: Primary NTP Server
          optional: 0
        - id: dns_server
          name: Primary DNS Server
          optional: 0
        - id: syslog_server
          name: Syslog Server
          optional: 0
        - id: dns_domain
          name: DNS Domain
          optional: 0
    - "Apps & Services":
      - "Infrastructure Services":
        - id: deploy_esx
          name: "ESX"
          optional: 0
          input: checkbox
        - id: deploy_nsx
          name: "NSX"
          optional: 0
          input: checkbox
        - id: deploy_vcenter
          name: "vCenter Server"
          optional: 0
          input: checkbox
      - "Cloud Management Platforms":
        - id: deploy_cna
          name: "Cloud-Native Applications"
          optional: 0
          input: checkbox
        - id: deploy_vio
          name: "VMware Integrated OpenStack"
          optional: 0
          input: checkbox
        - id: deploy_vra
          name: "vRealize Automation"
          optional: 0
          input: checkbox
      - "Infrastructure Applications":
        - id: deploy_vrli
          name: "vRealize Log Insight"
          optional: 0
          input: checkbox
        - id: deploy_vrops
          name: "vRealize Operations"
          optional: 0
          input: checkbox
        - id: deploy_vrb
          name: "vRealize Business"
          optional: 0
          input: checkbox
    - "General":
      - "Out-of-band Management Services":
        - id: enable_oob_mgmt_svcs
          name: "Enable out-of-band vCenter and NSX management services?"
          optional: 0
          input: checkbox
      - "vCenter PSC Deployment Scheme":
        - id: psc_appliance_deployment_scheme
          name: "Select the PSC deployment scheme"
          optional: 0
          input: dropdown
          options:
            - id: Existing
            - id: Embedded PSC
            - id: Dedicated PSC
      - "Network IP Scheme":
        - id: network_ip_scheme
          name: "Select the IP scheme (where applicable)"
          input: dropdown
          optional: 0
          options:
            - id: DHCP
            - id: Static
    - "ESX":
      - "Number of ESX hosts to provision to Management Cluster":
        - id: mgmt_esx_count
          name: "Enter the number"
          default: 4
      - "Number of ESX hosts to provision to NSX Edge Cluster":
        - id: nsxedge_esx_count
          name: "Enter the number"
          default: 4
      - "Number of ESX Compute Clusters":
        - id: compute_cluster_count
          name: "Enter number"
          default: 1
      - "Number of ESX to provision to the Compute Cluster":
        - id: compute_esx_count
          name: "Enter the number"
          default: 4
    - "NSX":
      - "Number of Edges to provision":
        - id: nsxedge_appliance_count
          name: "Enter the number"
- Install:
  - Chaperone Configuration:
    - id: config_chaperone
      name: Save Chaperone config
      commands:
        - "/opt/supervio/supervio_play_tags site_primaryweb.yml uiconfig"
