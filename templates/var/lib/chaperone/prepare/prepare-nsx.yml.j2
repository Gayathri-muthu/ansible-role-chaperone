      - "NSX Appliance Configuration":
        - id: nsxmgr_appliance_name
          name: "NSX Manager Name"
          optional: 0
          help: "Name of the NSX Manager appliance"
        # !!!DROPDOWN_INPUT_REQUIRED!!! Needs to use the pre-populated dropdown
        # or
        # !!!DUPLICATE_PROPERTY!!!
        # This property can more than likely be replaced by a pre-entered
        # account located under another section
        - id: nsxmgr_datastore
          name: "NSX Manager Datastore"
          optional: 0
          help: "Name of the Datastore to use for VM deployment"
        # !!!DROPDOWN_INPUT_REQUIRED!!! Needs to use the pre-populated dropdown
        # or
        # !!!DUPLICATE_PROPERTY!!!
        # This property can more than likely be replaced by a pre-entered
        # account located under another section
        - id: nsxmgr_mgmt_portgroup
          name: "NSX Manager Management Portgroup"
          optional: 0
        # !!!DROPDOWN_INPUT_REQUIRED!!! Needs to use the pre-populated dropdown
        # or
        # !!!DUPLICATE_PROPERTY!!!
        # This property can more than likely be replaced by a pre-entered
        # account located under another section
        - id: nsxmgr_cluster_deploy
          name: "Target ESX Cluster"
          optional: 0
          help: "Select cluster to deploy to"
        - id: nsxmgr_admin_password
          name: "NSX Admin CLI password"
          optional: 0
          input: password
        - id: nsxmgr_enable_password
          name: "NSX Enable password"
          optional: 0
          input: password
      - "NSX Appliance Configuration - Network":
        - id: nsxmgr_hostname
          name: "NSX Manager Hostname"
          optional: 0
          help: "NSX Manager Hostname ex: nsxmanager-01a"
        - id: nsxmgr_ip_address
          name: "NSX Manager IP"
          optional: 0
          help: "IP address on management network for NSX Manager"
        - id: nsxmgr_ip_netmask
          name: "NSX Manager Netmask"
          optional: 0
          help: "Netmask for management network"
        - id: nsxmgr_ip_gateway
          name: "NSX Manager Gateway"
          optional: 0
          help: "Gateway for management network"
      - "NSX Controller":
        - id: controllername
          name: "Controller Name"
          optional: 0
          help: "Enter the name of the controller ex: controller-01"
        - id: controller_ds_name
          name: "Controller Datastore"
          optional: 0
          help: "Name of the datastore for the Controller VM"
          input: dropdown
          options: comp_vc_datastores
        - id: controller_password
          name: "Controller Password"
          optional: 0
          input: password
        - id: controller_deploy_size
          name: "Deploy Size"
          optional: 0
          input: dropdown
          help: "Choose the deploy type based on your environment"
          options:
            - id: 'small'
            - id: 'medium'
            - id: 'large'
    - "NSX IP Pools":
