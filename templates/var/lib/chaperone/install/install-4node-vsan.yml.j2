    - id: deploy_4node_cluster
      name: "Deploy 4 node cluster"
      commands:
{% if vsan_switch_type == 'DV Switch' %}
        - "/opt/{{ django_app }}/{{ django_app }}_play vsan.yml --tags vsan_4node_deploy"
{% elif vsan_switch_type == 'Standard Switch' %}
        - "/opt/{{ django_app }}/{{ django_app }}_play vsan.yml --tags vsan_4node_deploy_vss"
{% endif %}

