  - "vCenter Config":
    - id: install_oob_datacenter
      name: "Create OOB vSphere Datacenter"
      commands:
        - "/opt/{{ django_app }}/{{ django_app }}_play_tags vcenter.yml create_oob_datacenter_task"
        - "/opt/{{ django_app }}/{{ django_app }}_play_tags vcenter.yml oob_datacenter"
    - id: install_ib_datacenter
      name: "Create IB vSphere Datacenter"
      commands:
        - "/opt/{{ django_app }}/{{ django_app }}_play_tags vcenter.yml create_ib_datacenter_task"
        - "/opt/{{ django_app }}/{{ django_app }}_play_tags vcenter.yml ib_datacenter"
    - id: install_vds
      name: "Create VDS portgroups"
      commands:
        - "/opt/{{ django_app }}/{{ django_app }}_play_tags vcenter.yml vds"
    - id: install_datacenter_addhosts
      name: "Add Hosts"
      commands:
        - "/opt/{{ django_app }}/{{ django_app }}_play_tags vcenter.yml addhosts"
    - id: install_datacenter_confighosts
      name: "Configure Hosts vds"
      commands:
        - "/opt/{{ django_app }}/{{ django_app }}_play_tags vcenter.yml confighosts"
    - id: install_datacenter_hostprofile
      name: "Create Host Profiles"
      commands:
        - "/opt/{{ django_app }}/{{ django_app }}_play_tags vcenter.yml hostprofile"
    - id: install_applyprofiles
      name: "Apply Host Profiles"
      commands:
        - "/opt/{{ django_app }}/{{ django_app }}_play_tags vcenter.yml applyprofile"
